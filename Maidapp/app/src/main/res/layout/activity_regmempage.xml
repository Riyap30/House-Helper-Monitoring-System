<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".regmempage"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/logo_image1"
        android:layout_width="169dp"
        android:layout_height="172dp"
        app:srcCompat="@drawable/splash"
        />

    <TextView
        android:id="@+id/logo_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello there , Welcome "
        android:textSize="40sp"
        android:fontFamily="cursive"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Full name"
        android:textColorHint="#000000"
        android:id="@+id/namemem"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="city"
        android:textColorHint="#000000"
        android:id="@+id/citymem"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Society"
        android:textColorHint="#000000"
        android:id="@+id/Socnamemem"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Phone No."
        android:textColorHint="#000000"
        android:id="@+id/phonemem"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="New Password"
        android:textColorHint="#000000"
        android:id="@+id/passwordmemr"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/memreg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Register"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>




</LinearLayout>